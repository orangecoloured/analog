{
  "name": "analog",
  "version": "0.1.4",
  "description": "A minimal analytics tool to self-host.",
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "dev": "concurrently 'vite --host' 'DEBUG=ioredis:* npx tsx watch --env-file=.env.local src/services/server/index.ts'",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "RCKT",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@netlify/functions": "^5.1.2",
    "@netlify/vite-plugin": "^2.10.2",
    "@vercel/node": "^5.6.7",
    "ioredis": "^5.9.3",
    "mongodb": "^7.1.0",
    "pg": "^8.19.0",
    "toad-scheduler": "^3.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=22.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,mjs}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
